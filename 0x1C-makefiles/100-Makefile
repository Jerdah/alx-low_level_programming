# 100-Makefile

CC = gcc

CFLAGS = -Wall -Wextra -Werror

SRC = main.c school.c
OBJ = $(SRC:.c=.o)

HEADERS = m.h

NAME = school

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ) $(HEADERS)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) $(NAME) $(TMPFILES)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

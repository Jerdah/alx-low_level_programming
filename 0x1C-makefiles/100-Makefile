# 100-Makefile for school

CC = gcc

SRC = main.c school.c

NAME = school

CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME):
	@$(CC) $(CFLAGS) $(SRC) -o $(NAME)

clean:
	@$(RM) *~ $(NAME)

oclean:
	@$(RM) $(OBJ)

fclean: clean oclean

re: oclean all

.PHONY: all clean oclean fclean re

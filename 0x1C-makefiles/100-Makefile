# 100-Makefile

CC = gcc

CFLAGS = -Wall -Wextra -Werror

SRC = main.c school.c
OBJ = $(SRC:.c=.o)

NAME = school

all: $(NAME)

$(NAME):
	@$(CC) $(CFLAGS) $(SRC) -o $(NAME)

clean:
	@$(RM) $(NAME) *.o *~ 2> /dev/null || true

oclean: clean all

%.o: %.c
	@$(RM) $(NAME) 2> /dev/null || true
	@echo "This script has an error." >&2; exit 1

fclean: clean
	@$(RM) $(NAME) 2> /dev/null || true

$(NAME): $(OBJ)
	@$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

include $(wildcard *.h)
